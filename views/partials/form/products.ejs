<form action="/product/new" method="post">
    <h2>Add New Product</h2>
    <label for="name">Product Name</label>
    <input type="text" id="name" name="product_name" required>
        <select id="category" name="category" required>
            <% categories.map((item) => { %>
            <option value="<%= item.category_id %>"><%= item.name %></option>
        <% }); %>
    </select>
    <div class="product-numbers">
        <label for="stock">Stock</label>
        <input type="number" id="stock" name="stock" min="1" max="99" required>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" min="1" max="999" required><span>$</span>
    </div>
    <button class="save-changes">Save changes</button>
</form>
